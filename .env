# 环境变量配置示例
# 复制此文件为 .env 并修改配置

# Session 密钥（必须修改为随机字符串）
SESSION_SECRET=yghujeidoskldpcjsefgf

# 服务器端口
PORT=3000

# 数据库文件路径
DB_PATH=./todos.db

# 环境（development 或 production）
NODE_ENV=development

# 允许的域名（生产环境）
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# 密码最小长度
MIN_PASSWORD_LENGTH=8

# Session 过期时间（毫秒）
SESSION_MAX_AGE=86400000

# 登录失败最大次数
MAX_LOGIN_ATTEMPTS=5

# 账号锁定时间（分钟）
LOCKOUT_TIME=30
